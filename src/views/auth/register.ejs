<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Add Tailwind CSS CDN link -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-purple-100">

  <%- include('../header.ejs', { status: status }) -%>


    <div class="container mx-auto mt-20 px-4">
      <h2 class="text-3xl font-semibold mb-4 text-black">Signup</h2>

      <form method="POST" action="http://localhost:8000/signup"
        class="w-full max-w-md bg-white rounded-md shadow-md p-6">
        <div class="mb-4">
          <label for="username" class="block text-gray-800 font-semibold mb-2">Username:</label>
          <input type="text" id="username" name="username" class="w-full border p-2 border-violet-500 rounded-md" required>
          <% if (message1) { %>
            <p class="text-red-500 text-md  ">
              <%= message1 %>
            </p>
            <% } %>
        </div>
        <div class="mb-4">
          <label for="email" class="block text-gray-800 font-semibold mb-2">Email:</label>
          <input type="email" id="email" name="email" class="w-full border p-2 border-violet-500 rounded-md" required>
          <% if (message2) { %>
            <p class="text-red-500 text-md  ">
              <%= message2 %>
            </p>
            <% } %>
        </div>
        <div class="mb-4">
          <label for="password" class="block text-gray-800 font-semibold mb-2">Password:</label>
          <input type="password" id="password" name="password" class="w-full border p-2 border-violet-500 rounded-md" required>
        </div>
        <button type="submit" class="bg-violet-500 text-white px-4 py-2 hover:bg-violet-600 w-full">Signup</button>
      </form>
    </div>

    <!-- JavaScript to toggle mobile menu visibility -->
    <script>
      const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
      const mobileMenu = document.getElementById('mobile-menu');

      mobileMenuToggle.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    </script>
</body>

</html>